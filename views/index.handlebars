  <!-- Page Content -->
  <div class="container">

    <div class="row">
      <div class="col-lg-8">
        {{#if result}}
        {{#each result}}
        <!-- Post Content Column -->
        

        <!-- Title -->
        <a href="/getcompletepost/{{post_id}}">
          <h1 class="mt-4">{{{post_title}}}</h1>
        </a>
        <!-- Author -->
        <p class="lead">
          by
          <a href="#">{{{post_author}}}</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on {{{post_date}}}</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

        <hr>

        <!-- Post Content -->
        <p class="lead">{{{post_text}}}</p>

        <hr>
        {{/each}}
        {{else}}
        <div class="alert alert-warning" role="alert">
         <strong>Oops!</strong> {{{no_result}}}
       </div>
       {{/if}}
     </div>


     <!-- Sidebar Widgets Column -->
     <div class="col-md-4">

      <!-- Search Widget -->
      <div class="card my-4">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-secondary" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>

      <!-- Categories Widget -->
      <div class="card my-4">
        <h5 class="card-header">Categories</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">Web Design</a>
                </li>
                <li>
                  <a href="#">HTML</a>
                </li>
                <li>
                  <a href="#">Freebies</a>
                </li>
              </ul>
            </div>
            <div class="col-lg-6">
              <ul class="list-unstyled mb-0">
                <li>
                  <a href="#">JavaScript</a>
                </li>
                <li>
                  <a href="#">CSS</a>
                </li>
                <li>
                  <a href="#">Tutorials</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Side Widget -->
      <div class="card my-4">
        <h5 class="card-header">Side Widget</h5>
        <div class="card-body">
          You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
        </div>
      </div>

    </div>

  </div>
  <!-- /.row -->

</div>
